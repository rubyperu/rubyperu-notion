<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editando un documento</h1>

  <%= render "form", document: @document, workspace: @document.workspace %>

  <%= link_to "Mostrar este documento", workspace_document_path(@document), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Regresar al workspace", workspaces_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
